<link rel="stylesheet" href="/css/cards.css">
<div class="container">
    {{#each expulsions}}
    <div class="card">
        <div class="box">
            <div class="content">
                <h3>
                    {{player_name}}
                </h3>
                <h3>
                    {{player_number}}
                </h3>
                <center>
                    <a href="/expulsions/delete-expulsion/{{id}}" style="background-color: red ; color:aliceblue;"
                        class="danger">Eliminar</a>
                    <a href="/expulsions/edit-expulsion/{{id}}" style="background-color: black; color:aliceblue;"
                        class="secondary">Editar</a>
                </center>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card">
        <div class="box">
            <div class="content">
                <p>Sin registros por el momento.</p>
                <a href="/expulsions/add-expulsion">Crear uno!</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>