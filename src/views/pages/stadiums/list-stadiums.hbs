<link rel="stylesheet" href="/css/cards.css">
<div class="container">
    {{#each stadiums}}
    <div class="card">
        <div class="box">
            <div class="content">
                <h3>
                    {{name}}
                </h3>
                <center>
                    <a href="/stadiums/delete-stadium/{{id}}" style="background-color: red ; color:aliceblue;"
                        class="danger">Eliminar</a>
                    <a href="/stadiums/edit-stadium/{{id}}" style="background-color: black; color:aliceblue;"
                        class="secondary">Editar</a>
                </center>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card">
        <div class="box">
            <div class="content">
                <p>Sin registros por el momento.</p>
                <a href="/stadiums/add-stadium">Crear uno!</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>