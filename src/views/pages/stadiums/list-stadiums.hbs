<link rel="stylesheet" href="/css/styles-list-stadium.css">
<div class="container p-4">
    <div class="row">
        {{#each stadiums}}
        <div class="card">
            <div class="box">
                <div class="content">
                    <a href="">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                    </a>
                    <p>{{timeago createStadiums}}</p>
                    <a href="/stadiums/delete-stadium/{{id}}" style="background-color: red ; color:aliceblue;"
                        class="btn btn-danger">Eliminar</a>
                    <a href="/stadiums/edit-stadium/{{id}}" style="background-color: rgb(12, 174, 0) ; color:aliceblue;"
                        class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card">
            <div class="box">
                <div class="content">
                    <p>Sin registros por el momento.</p>
                    <a href="/stadiums/add-stadium">Crear uno!</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>