<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/matches/post-match" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="stadium" placeholder="Nombre del estadio">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="date_start" placeholder="Fecha en la que inicia"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="time_start" class="form-control" placeholder="Hora inicio de partido">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>