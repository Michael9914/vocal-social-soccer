<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/matches/edit-match/{{match.id}}" method="POST">
                             <div class="form-group">
                            <input type="text" value="{{match.stadium}}" class="form-control" name="stadium" placeholder="Nombre del estadio" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{match.date_start}}" name="date_start" class="form-control" placeholder="Fecha del partido">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{match.time_start}}" name="time_start" class="form-control" placeholder="Hora inicio del partido">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                    <link rel="stylesheet" href="/css/styles-edit-match.css">
                </div>
            </div>
        </div>
    </div>
</div>

