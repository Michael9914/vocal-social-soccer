<link rel="stylesheet" href="/css/styles-list-player.css">
<div class="container p-4">
    <div class="row">
        {{#each players}}
        <div class="card">
            <div class="box">
                <div class="content">
                    <a href="">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                        <h3 class="card-title text-uppercase">
                            {{position}}
                        </h3>
                        <h3 class="card-title text-uppercase">
                            {{shirt_number}}
                        </h3>
                    </a>
                    <p>{{timeago createPlayers}}</p>
                    <a href="/players/delete/{{id}}" style="background-color: red ; color:aliceblue;"
                        class="btn btn-danger">Eliminar</a>
                    <a href="/players/edit-players/{{id}}" style="background-color: rgb(12, 174, 0) ; color:aliceblue;"
                        class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card">
            <div class="box">
                <div class="content">
                    <p>Sin registros por el momento.</p>
                    <a href="/players/add-player">Crear uno!</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>